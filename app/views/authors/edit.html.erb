<%= form_with url: "/authors/#{@author_edit.id}", method: :patch, local: true do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :number_books %>
  <%= form.number_field :number_books %>
  <%= form.select :alive, [['alive', true], ['dead', false]] %>
  <%= form.submit "Submit Changes" %>
<% end %>
