<%= form_with url: "/authors", method: :post, local: true do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :number_books %>
  <%= form.number_field :number_books %>
  <%= form.label :alive %>
  <%= form.radio_button :alive, "true" %>
  <%= form.label :alive, "true" %>
  <%= form.radio_button :alive, "false" %>
  <%= form.label :alive, "false" %>
  <%= form.submit "Create Author" %>
<% end %>
