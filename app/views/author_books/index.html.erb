<%= link_to "Books", '/books' %>
<%= link_to "Authors", '/authors' %>
<h2>List of Books:</h2>
  <% @books.each do |book| %>
  <h3> Title: <%= book.title %> </h3>
  <p>Fiction?: <%= book.fiction %></p>
  <p>Book published: <%= book.publication_date%></p>
  <p>Created at: <%= book.created_at%></p>
  <p>Updated at: <%= book.updated_at%></p>
  <%= link_to "Edit #{book.title}", "/books/#{book.id}/edit" %>
  <% end %>
  <%= link_to "New Book", "/authors/#{@author.id}/books/new" %>
  <%= link_to "Sort Alphabetically", "/authors/#{@author.id}/books?sort=alpha" %>
